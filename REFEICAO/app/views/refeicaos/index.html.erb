<% content_for :titlePage do %>
  Lista de Refeições
<% end %>

<%=render '/layouts/panel' %>

<div class="containermininmo">
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Data da Refeição</th>
      <th>Descrição</th>
      <th>Tipo</th>
      <th>Valor Refeição</th>
      <th>Valor Acompanhamento</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @refeicaos.each do |refeicao| %>
      <tr>
        <td><%= refeicao.DATE_Refeicao.blank? ? '' : refeicao.DATE_Refeicao.strftime("%d/%m/%Y")  %></td>
        <td><%= refeicao.DESC_Refeicao %></td>
        <td><%= refeicao.TIPO_Refeicao %></td>
        <td><%= number_to_currency(refeicao.VALOR_Refeicao, unit: "R$", separator: ",", delimiter: "") %></td>
        <td><%= number_to_currency(refeicao.VALOR_Acompanhamento, unit: "R$", separator: ",", delimiter: "") %></td>
        <td><%= link_to image_tag('show.png', :title => 'Exibir', class: 'exibirico') , refeicao %></td>
        <td><%= link_to image_tag('edit.png', :title => 'Editar',  class: 'exibirico') , edit_refeicao_path(refeicao) %></td>
        <td><%= link_to image_tag('trash.png', :title => 'Excluir',  class: 'exibirico'), refeicao , :method => :delete,  :confirm => 'Deseja excluir o registro?'%></td>                    
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div></div>
<table style="margin-top:10px;">
  <tr>
    <td align="center" style="width:50px;">
      <%= link_to image_tag('new.png', :title => 'Novo', class: 'exibirico') , new_refeicao_path %>
    </td>
  </tr>
  <tr>
    <td align="center" style="width:20px;">
      <label class="altBotoes">Novo</label>
    </td>
  </tr> 
</table>
